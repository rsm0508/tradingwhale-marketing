# Enforce consistent line endings for all text files
* text=auto

# Force LF (Unix) line endings for Python, shell, and config files
*.py text eol=lf
*.sh text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.env text eol=lf
*.Dockerfile text eol=lf
requirements.txt text eol=lf

docker-compose.yml text eol=lf
